# Example environment variables for Dhanseva server
# Copy to .env and replace values in your environment (never commit real secrets)

# Postgres connection (either DATABASE_URL or individual parts)
DATABASE_URL=postgres://postgres:password@localhost:5432/dhanseva
# Or use individual settings
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=dhanseva
# DB_USER=postgres
# DB_PASSWORD=postgres_password

# JWT secret used to sign tokens (use a strong random string in production)
JWT_SECRET=change_this_to_a_secure_random_value
JWT_EXPIRES_IN=7d

# NODE_ENV=development

# Cashfree credentials for PAN verification
CF_CLIENT_ID=your_cashfree_client_id
CF_CLIENT_SECRET=your_cashfree_client_secret
CF_BASE_URL=https://api.cashfree.com/verification

# AWS / S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
S3_BUCKET=your-bucket-name

# Razorpay (test credentials)
RZ_KEY_ID=rzp_test_xxxxx
RZ_KEY_SECRET=rzp_test_yyyyy
 
# Notification & queue (Redis)
REDIS_URL=redis://127.0.0.1:6379

# SMTP for mailer
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=+1234567890

# WhatsApp (optional)
WHATSAPP_API_TOKEN=
